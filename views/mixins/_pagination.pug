mixin pagination(page,pages,count)
    .pagination
        .pagination__prev
            if page > 1
                a(href=`/stores/page/${page - 1}`) Назад 
        .pagination__text
            p= ` ${page}/${pages}`
        .pagination__next
            if page < pages
                a(href=`/stores/page/${+page + 1} `) Далее